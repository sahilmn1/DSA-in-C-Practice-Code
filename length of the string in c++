#include <iostream>
using namespace std;
// this is the Function code to find the length of the array
int Lengthofarray(char name[]){
    int count =0;
    for(int i=0; name[i]!='\0'; i++){
        count++;
    }
    return count;
}
int main()
{
    char name[20];
    cout << "Enter your Name : ";
    cin >> name;
    cout << endl;
    cout << "Your name is : " << name;

    cout<<"Length of the Array is : "<<Lengthofarray(name);
    return 0;
}
