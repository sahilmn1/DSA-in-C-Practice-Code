// here we will learn how to Make a calculator using c++ language
#include <iostream>
using namespace std;
int main() {
  int a, b;

  char ch;

  cout << "Enter your First Number : ";
  cin >> a;

  cout << "Enter your Second number : ";
  cin >> b;

  cout << "Enter the Choice for Calculating : ";
  cin >> ch;

  switch (ch) {
  case '+':
    cout << "The Addition of two number is : " << a + b;
    break;
  case '-':
    cout << "The substraction of the two number is : " << a - b;
    break;

  case '*':
    cout << "A * B = " << a * b;
    break;

  case '/':
    cout << "Division of the number is : " << a / b;
    break;
  }
}
